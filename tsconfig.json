{
  "compilerOptions": {
    "target": "ES2018",
    "module": "es2015",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",

    "declaration": true,
    "inlineSourceMap": true,

    "esModuleInterop": true,

    "outDir": ".",
    "baseUrl": ".",

    /* Additional Checks */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "*.js"
  ]
}
